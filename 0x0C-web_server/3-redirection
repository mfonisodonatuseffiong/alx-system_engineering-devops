#!/usr/bin/env bash
# Script that configures a new Ubuntu machine to respect the requirements:
# 1. Install nginx web server
# 2. Serve a page with "Hello World!" content at the root
# 3. Redirect /redirect_me to a specific URL

# Update the package list
sudo apt-get update

# Install nginx
sudo apt-get install -y nginx

# Create the index.html file with "Hello World!" content
echo "Hello World!" | sudo tee /var/www/html/index.html

# Add redirection in the nginx default server block
sudo sed -i '/server_name _;/a \\n\tlocation /redirect_me {\n\t\treturn 301 https://www.youtube.com/watch?v=QH2-TGUlwu4;\n\t}' /etc/nginx/sites-available/default

# Restart nginx to apply the changes
sudo service nginx restart
